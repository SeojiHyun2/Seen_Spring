<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">

	<insert id="writeboard" parameterType="BoardDTO">
        insert into board(boardno,title,content,userid)
        values(boardno_seq.nextval,#{title},#{content},#{userid})
    </insert>
	
	
	
<select id="boardView" parameterType="string" resultType="SweetDTO">
        select boardno,title,content,userid,artistname
            date_format(register_datetime, '%Y-%m-%d %H:%i:%s') register_datetime
        from board
        where id = #{id}
    </select>









</mapper>