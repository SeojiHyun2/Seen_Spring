<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board_repMapper">


	<insert id="reply" parameterType="HashMap" >
		insert into bor_reply (reply_id,boardno,reply_content,userid)
		values(reply_id_seq.NEXTVAL,#{boardno},#{reply_content},#{userid})
	</insert>
 
 <select id="replyList" resultType="Board_repDTO" >
 
 select reply_id, boardno, reply_content, artistname, userid
 from bor_reply
 where boardno =#{boardno}
 
 </select>


</mapper>